# UAV GCS Configuration
# Copy this file to .env and modify as needed

# Database Configuration
# SQLite (default, no setup required)
SQLALCHEMY_DATABASE_URI=sqlite:///uav_gcs.db

# PostgreSQL (uncomment and configure for production)
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost:5432/uav_gcs

# MySQL (uncomment and configure for production)
# SQLALCHEMY_DATABASE_URI=mysql://user:password@localhost:3306/uav_gcs

# Security Configuration
# Leave empty to disable API key authentication
API_KEY=

# Socket.IO Configuration
# Allow connections from any origin (default for LAN)
SOCKETIO_CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO

# Flask Configuration
SECRET_KEY=dev-key-change-in-production
